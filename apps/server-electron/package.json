{
    "name": "server-electron",
    "version": "1.0.0",
    "description": "Glide remote PC control server",
    "author": "Glide",
    "private": true,
    "main": "dist/src/main.js",
    "scripts": {
        "dev": "tsc && electron .",
        "build": "tsc",
        "dist": "electron-builder --win",
        "dist:mac": "electron-builder --mac"
    },
    "dependencies": {
        "@nut-tree-fork/nut-js": "^4.2.2",
        "express": "^4.22.1",
        "qrcode": "^1.5.4",
        "selfsigned": "^5.5.0",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^22.12.8",
        "@types/qrcode": "^1.5.6",
        "electron": "^35.7.5",
        "electron-builder": "^26.7.0",
        "typescript": "^5.8.3"
    },
    "build": {
        "appId": "com.glide.remote",
        "productName": "Glide",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.utilities"
        },
        "extraResources": [
            {
                "from": "../../dist/apps/client-pwa",
                "to": "dist/apps/client-pwa",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "output": "out"
        }
    }
}