{
    "name": "server-electron",
    "version": "1.0.0",
    "private": true,
    "main": "dist/src/main.js",
    "scripts": {
        "dev": "tsc && electron .",
        "build": "tsc",
        "dist": "electron-builder --win"
    },
    "dependencies": {
        "@nut-tree-fork/nut-js": "^4.2.2",
        "electron": "^33.2.0",
        "express": "^4.22.1",
        "qrcode": "^1.5.4",
        "selfsigned": "^5.5.0",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^22.12.8",
        "@types/qrcode": "^1.5.6",
        "electron-builder": "^25.1.8",
        "typescript": "^5.8.3"
    },
    "build": {
        "appId": "com.glide.remote",
        "productName": "Glide",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "files": [
            "dist/**/*",
            "../../dist/apps/client-pwa/**/*",
            "package.json"
        ],
        "directories": {
            "output": "out"
        }
    }
}