{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@glide/shared-types": [
                "libs/shared-types/src/index.ts"
            ],
            "@glide/shared-ui": [
                "libs/shared-ui/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}